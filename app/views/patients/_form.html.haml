= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |message|
          %li= message

  .field.mb-3
    = f.label :first_name, class: 'form-label'
    = f.text_field :first_name, class: 'form-control'
  .field.mb-3
    = f.label :last_name, class: 'form-label'
    = f.text_field :last_name, class: 'form-control'
  .field.mb-3
    = f.label :name, class: 'form-label'
    = f.text_field :name, class: 'form-control'
  .field.mb-3
    = f.label :birth_date, class: 'form-label'
    = f.text_field :birth_date, class: 'form-control'
  .field.mb-3
    = f.label :gender, class: 'form-label'
    = f.text_field :gender, class: 'form-control'
  .field.mb-3
    = f.label :phone_number, class: 'form-label'
    = f.text_field :phone_number, class: 'form-control'
  .field.mb-3
    = f.label :communication_language, class: 'form-label'
    = f.text_field :communication_language, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
